@model List<DAPM_Project.DTO.LichTrinhDTO> 
@{
    ViewBag.Title = "QLChuNhaXe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header Area -->
<header class="header">
    <!-- Header Inner -->
    <div class="header-inner" style="padding-top: 30px;">
        <div class="container">
            <div class="inner">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-12">
                        <!-- Start Logo -->
                        <div class="logo">
                            <a href="index.html"><img src="~/images/logo-benxe.png" alt="#" style="width:133px;height:60px;"></a>
                        </div>
                        <!-- End Logo -->
                        <!-- Mobile Nav -->
                        <div class="mobile-nav"></div>
                        <!-- End Mobile Nav -->
                    </div>
                    <div class="col-lg-7 col-md-9 col-12">
                        <!-- Main Menu -->
                        <div class="main-menu">
                            <nav class="navigation">
                                <ul class="nav menu">
                                    <li><a href="/Home/Index">Trang chủ</a></li>
                                    <li><a href="#">Giới thiệu </a></li>
                                    <li class="active"><a href="/Home/ChuNhaXe">Nhà xe </a></li>
                                    <li><a href="#">Chuyến xe </a></li>
                                    <li><a href="#">Tài xế </i></a></li>
                                    <li><a href="contact.html">Liên hệ</a></li>
                                </ul>
                            </nav>
                        </div>
                        <!--/ End Main Menu -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ End Header Inner -->
</header>
<!-- End Header Area -->
<div class="breadcrumbs overlay">
    <div class="container">
        <div class="bread-inner">
            <div class="row">
                <div class="col-12">
                    <h2>Xin chào nhà xe @ViewBag.name</h2>
                    <ul class="bread-list">
                        <li><a href="/Home/Index">Đăng xuất</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbs -->
<!-- Single News -->
<section class="news-single section">
    <div class="container" style="max-width: 2000px;">
            <div class="row">
                <div class="col-lg-2 col-12">
                    <div class="main-sidebar">
                        <div class="single-widget category">
                            <h3 class="title">Quản lý</h3>
                            <ul class="categor-list">
                                <li><a href="/Manager/InforChuNhaXe">Thông tin nhà xe</a></li>
                                <li><a href="/Manager/QLChuNhaXe">Quản lý lịch trình</a></li>
                                <li><a href="/Manager/AddLichTrinh">Thêm mới lịch trình</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-10 col-12">
                    <div class="main-sidebar">
                        <div class="single-widget category">
                            <table>
                                <tr>
                                    <th>ID lịch trình</th>
                                    <th>Giờ xuất phát</th>
                                    <th>Điểm đến</th>
                                    <th>Giá vé</th>
                                    <th>Số lượng còn lại</th>
                                    <th>Tài xế</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td>@i.idLichTrinh</td>
                                        <td>@i.gioXuatPhat</td>
                                        <td>@i.diemDen</td>
                                        <td>@i.giaVe</td>
                                        <td>@i.soLuongConLai</td>
                                        <td>@i.tenTaiXe</td>
                                        <td><a href="/Manager/EditLichTrinh?id=@i.idLichTrinh">Sửa</a></td>
                                        <td><a href="/Manager/DeleteLichTrinh?id=@i.idLichTrinh">Xóa</a></td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>

